{
  "name": "simple-api-stream",
  "version": "0.0.1",
  "description": "SimpleAPI+{Writable|Readable}Streams",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.js"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.umd.cjs"
      }
    }
  },
  "scripts": {
    "test:watch": "vitest watch --coverage",
    "test": "vitest run --coverage --coverage.reporter=cobertura --coverage.reporter=text",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "vite build && tsc --project tsconfig.build.json && cpx ./package.json dist && cpx README.md dist && cpx LICENSE dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juner/simple-api-stream.git"
  },
  "keywords": [
    "XML",
    "SAX",
    "stream"
  ],
  "author": "juners",
  "license": "MIT",
  "engines": {
    "node": "^24.x"
  },
  "bugs": {
    "url": "https://github.com/juner/simple-api-stream/issues"
  },
  "homepage": "https://github.com/juner/simple-api-stream#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cpx": "^1.2.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "path": "^0.12.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  }
}
